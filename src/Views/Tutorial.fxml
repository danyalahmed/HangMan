<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<Pane xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Java.Tutorial">
    <VBox alignment="CENTER" spacing="3.0">
        <padding>
            <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
        </padding>
        <ImageView fx:id="imgvTutorialImage" pickOnBounds="true" preserveRatio="true">
            <VBox.margin>
                <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
            </VBox.margin>
        </ImageView>
        <TextArea fx:id="txtAreaForImage" editable="false" wrapText="true">
            <VBox.margin>
                <Insets bottom="2.0" left="2.0" right="2.0"/>
            </VBox.margin>
            <padding>
                <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
            </padding>
        </TextArea>
        <HBox spacing="3.0">
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="btnPrevious" mnemonicParsing="false" onAction="#btnPreviousClick"
                    text="Previous"/>
            <Button fx:id="btnNext" layoutX="10.0" layoutY="10.0" mnemonicParsing="false"
                    onAction="#btnNextClick" text="Next"/>
            <Button fx:id="btnClose" layoutX="62.0" layoutY="10.0" mnemonicParsing="false"
                    onAction="#btnCloseClick" text="Close"/>
        </HBox>
    </VBox>
</Pane>
